{
  "compilerOptions": {
    "target": "ES2021",
    "lib": [ "dom", "dom.iterable", "es2021" ],
    "types": [ "node" ],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "strict": false,
    "skipLibCheck": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": { "@/*": [ "./src/*" ] }
  },
  "include": [ "next-env.d.ts", "src/**/*", "*.ts", "*.tsx" ],
  "exclude": [ "node_modules" ]
}
